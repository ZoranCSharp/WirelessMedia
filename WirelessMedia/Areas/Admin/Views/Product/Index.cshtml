@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border" style="text-align:center;">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(z => z.Name)
                    </th>                    
                    <th>
                        @Html.DisplayNameFor(z => z.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(z => z.Manufacturer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(z => z.Supplier)
                    </th>
                    <th>
                        @Html.DisplayNameFor(z => z.Price)
                    </th>
                    <th>
                        
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model)
                {
            <tr style="text-align:center;">
                <td>
                    @Html.DisplayFor(z => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(z => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(z => item.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(z => item.Supplier)
                </td>
                <td>                    
                    @Html.EditorFor(z => item.Price, null, new { htmlAttributes = new { @type = "string", @class = "form-control" } }))
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>No Product exists...</p>
        }

    </div>
</div>

