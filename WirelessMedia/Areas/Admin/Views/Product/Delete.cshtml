@model WirelessMedia.Models.Product
@using WirelessMedia.Extensions

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div class="form-group row" style="padding-bottom:35px">
            <h2 class="text-info">Edit Product</h2>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div><div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5" readonly>
                @Html.TextAreaFor(z => z.Description)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.CategoryId" id="CategoryId" readonly asp-items="Model.Category.ToSelectListItem(Model.Product.CategoryId)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Manufacturer" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Manufacturer" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Supplier" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Supplier" readonlyclass="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Price" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>
}


