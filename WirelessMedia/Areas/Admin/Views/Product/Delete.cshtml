@model WirelessMedia.Models.ViewModel.ProductViewModel
@using WirelessMedia.Extensions

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Delete">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="Product.Id" />
        <div class="form-group row" style="padding-bottom:35px">
            <h2 class="text-info">Edit Product</h2>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Name" readonly class="form-control" />
            </div>
        </div><div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.TextAreaFor(z => z.Product.Description)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.CategoryId" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.Product.CategoryId" id="CategoryId" disabled asp-items="Model.Category.ToSelectListItem(Model.Product.CategoryId)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Manufacturer" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Manufacturer" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Supplier" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Supplier" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Price" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Price" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Product.Id" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format',
            readonly: 1
        });
    </script>
}
