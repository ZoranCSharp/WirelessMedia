@model WirelessMedia.Models.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Description";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Description">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="Product.Id" />
        <div class="form-group row" style="padding-bottom:35px">
            <h2 class="text-info">Edit Product</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.TextAreaFor(z => z.Product.Description)
            </div>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DetailsEditAndBackToListButton" model="Model.Product.Id" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format',
            forced_root_block: false,
            readonly: 1
        });
    </script>
}

